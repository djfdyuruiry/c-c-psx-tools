<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MixFileManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
        xmlns:ic="using:Avalonia.Xaml.Interactions.Custom"
		mc:Ignorable="d"
		d:DesignWidth="1024"
		d:DesignHeight="768"
        x:Class="MixFileManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding WindowTitle}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid ColumnDefinitions="3*,7*" RowDefinitions="*">
		<Grid Grid.Row="0" Grid.Column="0" ColumnDefinitions="*" RowDefinitions="9*,1*" Margin="5">
			<TreeView x:Name="FileTree" 
					  Items="{Binding FileEntries}"
					  Grid.Row="0"
					  Grid.Column="0">
				<i:Interaction.Behaviors>
					<ia:EventTriggerBehavior EventName="SelectionChanged" SourceObject="FileTree">
						<ia:CallMethodAction TargetObject="{Binding}" MethodName="SelectFile"/>
					</ia:EventTriggerBehavior>
				</i:Interaction.Behaviors>
				<TreeView.ItemTemplate>
					<TreeDataTemplate>
						<TextBlock Text="{Binding FileName}"/>
					</TreeDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
			<StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="5">
				<Button Command="{Binding LoadMixFile}"
						CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
						Content="Load MIX File"/>
				<Button Command="{Binding LoadXaFile}"
						CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
						Content="Load XA File"/>
			</StackPanel>
		</Grid>
		<Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*" RowDefinitions="0.75*,2*,1*,15*" Margin="5">
			<TextBlock Grid.Row="0" Grid.Column="0" FontSize="14" Text="Manage Entry"/>
			<Border Grid.Row="1" Grid.Column="0">
				<StackPanel Orientation="Horizontal" Spacing="5">
					<Button Command="{Binding ShowDetails}" Content="View Details"/>
					<Button Command="{Binding ShowText}" Content="View Text"/>
					<Button Command="{Binding ExtractFile}"
							CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
							Content="Extract"/>
					<Button Command="{Binding ReplaceFile}"
							CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
							Content="Replace"/>
					<Button IsEnabled="False" Content="Delete"/>
				</StackPanel>
			</Border>
			<TextBlock Grid.Row="2" Grid.Column="0" IsVisible="{Binding ShouldShowDetails}"  FontSize="14" Text="Entry Details"/>
			<TextBox Grid.Row="3" Grid.Column="0" IsVisible="{Binding ShouldShowDetails}" IsReadOnly="True" Text="{Binding CurrentEntryYaml}"/>
			<TextBlock Grid.Row="2" Grid.Column="0" IsVisible="{Binding ShouldShowText}"  FontSize="14" Text="Entry Text"/>
			<TextBox Grid.Row="3" Grid.Column="0" IsVisible="{Binding ShouldShowText}" IsReadOnly="True" Text="{Binding CurrentEntryText}"/>
		</Grid>
	</Grid>

</Window>
